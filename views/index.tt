<h2>Paste your code!</h2>

<form action="/" method="POST">
<select name="lang">
[% FOREACH lang IN syntaxes.keys.sort %]
<option [% IF lang == "txt" %]selected="selected"[% END %] value="[% lang | html %]">
[% lang | html %]
</option>
[% END %]
</select>
<input type="submit" value="Paste"><br />
<textarea name="code" rows="30" cols="80"></textarea><br />
<input type="submit" value="Paste"><br />
</form>
