<h2>Paste your code!</h2>

<form action="/" method="POST">
<select name="lang">
[% FOR lang IN syntaxes %]
<option [% IF lang.default %]selected="selected"[% END %] value="[% lang.value | html %]">[% lang.display | html %]</option>
[% END %]
</select>
<input type="submit" value="Paste"><br />
<textarea name="code" rows="30" cols="80"></textarea><br />
<input type="submit" value="Paste"><br />
</form>
